    <script>
        // Interactive text animation
        const title = document.querySelector('.about-title h1');
        const subtitle = document.querySelector('.about-title h2');
        const subtitle2 = document.querySelector('.about-title h3');
        const moveRange = 30; // Adjust this value to control movement amount

        document.addEventListener('mousemove', (e) => {
            const { innerWidth, innerHeight } = window;
            const centerX = innerWidth / 2;
            const centerY = innerHeight / 2;
            
            // Calculate position relative to center
            const xPercent = (e.clientX - centerX) / centerX;
            const yPercent = (e.clientY - centerY) / centerY;

            // Apply movement to title
            title.style.transform = `
                translate(${xPercent * moveRange}px, ${yPercent * moveRange}px)
            `;

            // Apply inverse movement to subtitle for parallax effect
            subtitle.style.transform = `
                translate(${-xPercent * (moveRange/2)}px, ${-yPercent * (moveRange/2)}px)
            `;

            subtitle2.style.transform = `
                translate(${-xPercent * (moveRange/3)}px, ${-yPercent * (moveRange/3)}px)
            `;
        });
    </script>


